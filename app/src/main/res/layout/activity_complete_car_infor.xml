<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lgy.drive.view.NaviTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_title="完善车辆信息"></com.lgy.drive.view.NaviTitleView>

    <LinearLayout style="@style/input_ll">

        <TextView
            style="@style/input_title"
            android:text="车牌号" />

        <EditText
            android:id="@+id/ev_car_number"
            style="@style/input_content"
            android:hint="请输入车牌号" />
    </LinearLayout>

    <LinearLayout style="@style/input_ll">

        <TextView
            style="@style/input_title"
            android:text="车辆型号" />

        <EditText
            android:id="@+id/ev_car_type"
            style="@style/input_content"
            android:hint="请输入你的辆车型号" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_drive_license"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_text_size"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next_step"
        style="@style/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步" />
</LinearLayout>