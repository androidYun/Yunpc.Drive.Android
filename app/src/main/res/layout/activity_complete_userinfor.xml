<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lgy.drive.view.NaviTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_title="完善个人信息"></com.lgy.drive.view.NaviTitleView>

    <LinearLayout style="@style/input_ll">

        <TextView
            style="@style/input_title"
            android:text="真实姓名" />

        <EditText
            android:id="@+id/ev_name"
            style="@style/input_content"
            android:hint="请输入真实姓名" />
    </LinearLayout>

    <LinearLayout style="@style/input_ll">

        <TextView
            style="@style/input_title"
            android:text="身份证号" />

        <EditText
            android:id="@+id/ev_idcard"
            style="@style/input_content"
            android:hint="请输入你的身份证号" />
    </LinearLayout>

    <LinearLayout style="@style/input_ll">

        <TextView
            style="@style/input_title"
            android:text="行驶证编号" />

        <EditText
            android:id="@+id/ev_drive"
            style="@style/input_content"
            android:hint="请输入你的行驶证编号" />
    </LinearLayout>

    <LinearLayout style="@style/input_ll">

        <TextView
            style="@style/input_title"
            android:text="请选择性别" />


        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="男" />

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout style="@style/input_ll">

        <TextView
            style="@style/input_title"
            android:text="领取驾照时间" />

        <TextView
            android:id="@+id/tv_drive_license_time"
            style="@style/input_content"
            android:hint="请选择你的领取驾照时间" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_idcard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_text_size"
            android:layout_weight="1"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_text_size"
            android:layout_weight="1"
            android:background="@color/doctor_djz_red" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next_step"
        style="@style/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步" />
</LinearLayout>