<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lgy.drive.view.NaviTitleView
        android:id="@+id/navi_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_title="注册"></com.lgy.drive.view.NaviTitleView>

    <LinearLayout style="@style/input_ll">

        <TextView
            style="@style/input_title"
            android:text="手机号" />

        <EditText
            android:id="@+id/ev_account"
            style="@style/input_content"
            android:hint="请输入你的手机号" />
    </LinearLayout>

    <LinearLayout style="@style/input_ll">

        <TextView
            style="@style/input_title"
            android:text="密码" />

        <EditText
            android:id="@+id/ev_pwd"
            style="@style/input_content"
            android:hint="请输入你的密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        style="@style/btn_confirm"
        android:text="注册" />
</LinearLayout>